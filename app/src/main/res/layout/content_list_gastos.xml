<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/fab_shadow_offset"
        android:layout_marginLeft="@dimen/fab_shadow_offset"
        android:layout_marginRight="@dimen/fab_shadow_offset"
        android:layout_marginTop="@dimen/fab_shadow_offset"
        android:background="@color/colorAccent"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/cardView">

        <TextView
            android:id="@+id/nombre_gasto_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/fab_labels_margin"
            android:text="Gasto"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/total_gasto_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="top"
            android:paddingLeft="@dimen/fab_labels_margin"
            android:text="Ropa"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tipo_gasto_lbl"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/fab_labels_margin"
            android:text="500"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lugar_gasto_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/fab_size_normal"
            android:layout_marginTop="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_size_normal"
            android:text="Mac"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignRight="@+id/cardView"
        android:layout_alignTop="@+id/cardView"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="Lugar de gasto:"
        android:textColor="@color/cardview_dark_background"
        android:textStyle="bold" />
</RelativeLayout>