<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        tools:ignore="UselessParent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivdibujo"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ahorro"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/paraelatributo01"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Atributo01"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/paraelatributo02"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Atributo02"
        tools:ignore="HardcodedText" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:gravity="center_horizontal">
        <TextView
            android:id="@+id/paraelatributo03"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Atributo03"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/paraelatributo04"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Atributo04"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/paraelatributo05"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Atributo05"
            tools:ignore="HardcodedText" />

    </TableRow>

        <ProgressBar
            android:id="@+id/firstBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/secondBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </TableLayout>


</LinearLayout>
