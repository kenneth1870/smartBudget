<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kenneth.smartbudget.GastosFragment">


    <ListView
        android:id="@+id/list_gastos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/info_gastos"
        android:layout_width="59dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_help"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/gastos_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Para crear un gasto toca (+)"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/info_gastos"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
